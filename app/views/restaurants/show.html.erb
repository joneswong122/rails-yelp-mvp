<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.rating %><%= review.content %></li>
  <% end %>
</ul>
<br>

<%= link_to "Back to list", restaurants_path, class: "btn btn-primary mb3" %>
<%= link_to "Creat new review", new_restaurant_review_path(@restaurant), class: "btn btn-primary mb3"%>
